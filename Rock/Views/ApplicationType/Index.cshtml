@model IEnumerable<ApplicationType>

<div class=" container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Application Types
            </h2>
        </div>
        <div class="col-6 text-right"><a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">Add application type</a></div>
    </div>

    <br /><br />

    @if (Model.Count() >= 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                       Application name
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="30%">@obj.Id</td>
                        <td width="50%">@obj.Name</td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <p>Application dont exist</p>
    }

</div>
